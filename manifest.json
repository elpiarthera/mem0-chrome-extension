{
  "manifest_version": 3,
  "name": "Mem0",
  "version": "1.3.8",
  "description": "ðŸ§  Share context across ChatGPT, Claude & Perplexity. ðŸ”„ No more repeating yourself to different AI assistants! âœ¨",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://api.mem0.ai/*", "https://app.mem0.ai/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["claude/content.js"]
    },
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["chatgpt/content.js"]
    },
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": ["perplexity/content.js"]
    },
    {
      "matches": ["https://app.mem0.ai/*"],
      "js": ["mem0/content.js"]
    },
    {
      "matches": ["https://grok.com/*", "https://x.com/i/grok*"],
      "js": ["grok/content.js"]
    },
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": ["deepseek/content.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["sidebar.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "sidebar.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
